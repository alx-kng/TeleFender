<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ShapeAppearanceOverlay.Dodo.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Dodo.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Dodo.Button.LessRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Dodo.CardView.Square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Dodo.Button.LeftRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Dodo.Button.RightRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10sp</item>
        <item name="cornerSizeTopRight">10sp</item>
    </style>

    <style name="Widget.Dodo.Toolbar.Primary" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="colorControlNormal">@color/icon_white</item>
    </style>

    <style name="ThemeOverlay.Dodo.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/icon_white</item>
    </style>

</resources>
