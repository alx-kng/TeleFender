<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_view_contact_photo"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/purple_200"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_baseline_person_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="35dp"
                app:iconTint="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Tele.Button.Circle" />

            <TextView
                android:id="@+id/item_view_contact_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="26sp"
                android:textColor="@color/icon_white"
                tools:text="7167102601"
                />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_view_contact_call_button"
                style="?attr/materialButtonStyle"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/grey"
                android:foreground="?android:selectableItemBackground"
                app:icon="@drawable/ic_baseline_call_24_white"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:iconTint="@color/purple_200"
                app:layout_constraintEnd_toStartOf="@id/item_view_contact_message_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Tele.Button.Rounded"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_view_contact_message_button"
                style="?attr/materialButtonStyle"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/grey"
                android:foreground="?android:selectableItemBackground"
                app:icon="@drawable/ic_baseline_message_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:iconTint="@color/purple_200"
                app:layout_constraintEnd_toStartOf="@id/item_view_contact_email_button"
                app:layout_constraintStart_toEndOf="@id/item_view_contact_call_button"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Tele.Button.Rounded"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_view_contact_email_button"
                style="?attr/materialButtonStyle"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/grey"
                android:foreground="?android:selectableItemBackground"
                app:icon="@drawable/ic_baseline_email_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:iconTint="@color/disabled_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_view_contact_message_button"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Tele.Button.Rounded"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
