<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/ic_baseline_person_outline_24"
                    app:tint="@color/white"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/change_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="62dp"
                    android:textColorHint="#888888"
                    android:hint="Name"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/change_contact_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        tools:background="@color/grey"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/ic_baseline_call_24_white"
                    app:tint="@color/white"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/change_contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="62dp"
                    android:textColorHint="@color/hint_grey"
                    android:hint="Phone Number"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/change_contact_number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        tools:background="@color/grey"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/ic_baseline_email_24"
                    app:tint="@color/white"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/change_contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="62dp"
                    android:textColorHint="@color/hint_grey"
                    android:hint="Email"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/change_contact_email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        tools:background="@color/grey"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/ic_baseline_location_on_24"
                    app:tint="@color/white"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/change_contact_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="62dp"
                    android:textColorHint="@color/hint_grey"
                    android:hint="Address"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/change_contact_address_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        tools:background="@color/grey"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>