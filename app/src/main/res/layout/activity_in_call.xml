<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@drawable/gradient_active"
        >

        <LinearLayout
            android:id="@+id/caller_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/number_or_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="35sp"
                tools:text="Benton Georgian"

                />

            <TextView
                android:id="@+id/small_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                tools:text="716-710-2601"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            tools:text="1:34"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/caller_display"
            />

        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="55sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/grey_rounded"
            android:backgroundTint="@color/black"
            android:padding="15sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30sp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_active"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="75sp"
                        android:layout_height="75sp"
                        android:backgroundTint="@color/active_call_button"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_baseline_add_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="45sp"
                        app:iconTint="@color/icon_white"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Dodo.Button.Rounded"
                        />

                    <TextView
                        android:id="@+id/add_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7sp"
                        android:text="@string/add_active"
                        android:textSize="12sp"
                        android:textColor="@color/icon_white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30sp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/swap_active"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="75sp"
                        android:layout_height="75sp"
                        android:backgroundTint="@color/active_call_button"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_baseline_swap_calls_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="45sp"
                        app:iconTint="@color/icon_white"
                        tools:iconTint="@color/disabled_grey"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Dodo.Button.Rounded"
                        />

                    <TextView
                        android:id="@+id/swap_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7sp"
                        android:text="@string/swap_active"
                        android:textSize="12sp"
                        android:textColor="@color/icon_white"
                        tools:textColor="@color/disabled_grey"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/merge_active"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="75sp"
                        android:layout_height="75sp"
                        android:backgroundTint="@color/active_call_button"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_baseline_call_merge_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="45sp"
                        app:iconTint="@color/icon_white"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Dodo.Button.Rounded"
                        />

                    <TextView
                        android:id="@+id/merge_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7sp"
                        android:text="@string/merge_active"
                        android:textSize="12sp"
                        android:textColor="@color/icon_white"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30sp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/speaker_active"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="75sp"
                        android:layout_height="75sp"
                        android:backgroundTint="@color/active_call_button"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_baseline_volume_up_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="45sp"
                        app:iconTint="@color/icon_white"
                        tools:iconTint="@color/clicked_blue"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Dodo.Button.Rounded"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7sp"
                        android:text="@string/speaker_active"
                        android:textSize="12sp"
                        android:textColor="@color/icon_white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30sp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mute_active"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="75sp"
                        android:layout_height="75sp"
                        android:backgroundTint="@color/active_call_button"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_baseline_mic_off_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="45sp"
                        app:iconTint="@color/icon_white"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Dodo.Button.Rounded"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7sp"
                        android:text="@string/mute_active"
                        android:textSize="12sp"
                        android:textColor="@color/icon_white"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/keypad_active"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="75sp"
                        android:layout_height="75sp"
                        android:backgroundTint="@color/active_call_button"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_baseline_dialpad_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="45sp"
                        app:iconTint="@color/icon_white"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Dodo.Button.Rounded"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7sp"
                        android:text="@string/keypad_active"
                        android:textSize="12sp"
                        android:textColor="@color/icon_white"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/hangup_active"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:backgroundTint="@color/hangup_red"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_baseline_call_end_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="45sp"
                    app:iconTint="@color/icon_white"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Dodo.Button.Circle"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>