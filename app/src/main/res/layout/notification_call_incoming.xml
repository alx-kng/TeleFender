<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/incoming_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="0dp"
    tools:background="@color/teal_700"
    >

    <TextView
        android:id="@+id/incoming_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:textColor="@color/icon_white"
        tools:text="Placeholder Title"
        android:textSize="16dp"
        />

    <LinearLayout
        android:id="@+id/incoming_notification_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/incoming_notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="90dp"
            android:textColor="@color/icon_white"
            tools:text="Placeholder Text"
            />

        <ImageButton
            android:id="@+id/incoming_notification_answer_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:foreground="?android:selectableItemBackground"
            android:background="@drawable/rounded_box_green"
            android:src="@drawable/ic_baseline_call_24_white"
            android:scaleType="fitXY"
            android:textColor="#fff"
            />

        <ImageButton
            android:id="@+id/incoming_notification_hangup_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:foreground="?android:selectableItemBackground"
            android:background="@drawable/rounded_box_red"
            android:src="@drawable/ic_baseline_call_end_24_white"
            android:scaleType="fitXY"
            android:textColor="#fff"
            />
    </LinearLayout>
</RelativeLayout>