<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:background="@color/grey"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/item_change_contact_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:importantForAccessibility="no"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_baseline_person_outline_24"
        app:tint="@color/white"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item_change_contact_text_layout"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        android:textColorHint="#888888"
        tools:hint="Name"
        >

        <com.telefender.phone.gui.adapters.custom_views.CustomTextInputEditText
            android:id="@+id/item_change_contact_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:textSize="16sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_change_contact_remove"
        android:clickable="true"
        android:focusable="true"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"
        app:icon="@drawable/ic_baseline_remove_24"
        app:iconTint="@color/block_red"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30sp"
        app:strokeWidth="0dp"
        android:padding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Tele.Button.Circle"
        />

</LinearLayout>