<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_custom.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/grey_rounded"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/settingsDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textColor="@color/icon_white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingCloseButton"
            style="?attr/materialButtonStyle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/grey"
            android:foreground="?android:selectableItemBackground"
            app:icon="@drawable/ic_baseline_close_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:iconTint="@color/icon_white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/handle_mode_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/handle_allow_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:padding="10dp"
            android:text="Allow"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:textColor="@color/purple_200"
            android:backgroundTint="@color/grey"
            app:strokeColor="@color/purple_200"
            app:strokeWidth="2dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.Tele.Button.LeftRounded"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/handle_silence_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:padding="10dp"
            android:text="Silence"
            android:textAllCaps="false"
            android:textColor="@color/purple_200"
            android:textSize="17sp"
            android:backgroundTint="@color/grey"
            app:strokeColor="@color/purple_200"
            app:strokeWidth="2dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.Tele.Button.Square"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/handle_block_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:padding="10dp"
            android:text="Block"
            android:textAllCaps="false"
            android:textColor="@color/purple_200"
            android:textSize="17sp"
            android:backgroundTint="@color/grey"
            app:strokeColor="@color/purple_200"
            app:strokeWidth="2dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.Tele.Button.RightRounded"
            tools:textColor="@color/icon_white"
            tools:backgroundTint="@color/purple_200"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/other_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/report_issue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:text="Report an issue"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:textColor="@color/icon_white"
            android:backgroundTint="@color/purple_200"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Tele.Button.Rounded"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/privacy_policy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Privacy Policy"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_200"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Tele.Button.Rounded"
            />


    </LinearLayout>

</LinearLayout>